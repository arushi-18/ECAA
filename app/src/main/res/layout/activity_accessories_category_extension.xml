<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccessoriesCategoryExtension"
    android:background="@color/colorAccent">

    <TextView
        android:id="@+id/update_product_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD PRODUCT DETAILS"
        android:textSize="28dp"
        android:textColor="@android:color/black"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/choose_category_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_product_title"
        android:text="Accessories"
        android:textSize="25dp"
        android:textColor="@android:color/black"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/choose_category_title"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="15dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/category_line1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/product_hat"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/hat"
                    android:padding="5dp"
                    android:background="@drawable/icon_shape"
                    />
                <TextView
                    android:id="@+id/title_men"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="50dp"
                    android:text="Hats"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:fontFamily="cursive"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/category_line2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/product_sunglasses"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/sunglasses"
                    android:padding="5dp"
                    android:background="@drawable/icon_shape"
                    />
                <TextView
                    android:id="@+id/title_women"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="40dp"
                    android:text="Sunglasses"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:fontFamily="cursive"
                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/category_line3"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/product_watch"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/watch"
                    android:padding="5dp"
                    android:background="@drawable/icon_shape"
                    />
                <TextView
                    android:id="@+id/title_kids"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="40dp"
                    android:text="Watches"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:fontFamily="cursive"
                    />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>